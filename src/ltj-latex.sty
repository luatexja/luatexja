  \ifcsname tex_shipout:D\endcsname
    \expandafter\let\csname tex_shipout:D\endcsname\ltj@shipout
  \fi
\else
  \directlua{%
    luatexbase.add_to_callback('pre_shipout_filter',luatexja.direction.shipout_lthook, 'ltj.direction', 1)
  }
