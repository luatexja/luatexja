  {\Gm@setlength\headheight\z@\Gm@defbylen{ltj@headsep}\z@}{}}%
\define@key{Gm}{nofoot}[true]{\Gm@doifelse{nofoot}{#1}%
  {\Gm@defbylen{ltj@footskip}\z@}{}}%
